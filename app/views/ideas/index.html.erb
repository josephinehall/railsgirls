<h1>Listing ideas</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= idea.name %></td>
    <td><%= idea.description %></td>
    <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>
    <td><%= link_to 'Show', idea, class: "btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea), class: "btn btn-info" %></td>
    <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
  </tr>
<% end %>
</table>

<br />


<%= link_to 'New Idea', new_idea_path, class: "btn btn-info" %>
